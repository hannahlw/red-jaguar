<center>

  <div class="col-sm-5" style="margin-left: 30%"> 

    <div class="lc-block toggled" id="l-login" style="flo"> 

       <div class="field">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  </div>



  <div class="input-group">
      <span class="input-group-addon"><i class="md md-person"></i></span>
      <div class="fg-line">
                  <%= f.text_field :name, :placeholder => "name", autofocus: true, :class => "form-control"  %>
      </div>
  </div>
  
  <br>
  
  <div class="input-group">
      <span class="input-group-addon"><i class="md md-email"></i></span>
      <div class="fg-line">
          <%= f.email_field :email, :placeholder => "email", autofocus: true, :class => "form-control"  %>
      </div>
  </div>
  
  <br>
  
  <div class="input-group">
      <span class="input-group-addon"><i class="md md-accessibility"></i></span>
      <div class="fg-line">
         <% if @validatable %>
<em>(<%= @minimum_password_length %> characters minimum)</em>
<% end %>
<%= f.password_field :password, :placeholder => "password", autocomplete: "off", :class => "form-control" %>
      </div>
  </div>
  
                                      <br>
                                      
        <div class="input-group">
            <span class="input-group-addon"><i class="md md-accessibility"></i></span>
            <div class="fg-line">    
               <%= f.password_field :password_confirmation, :placeholder => "password confirmation", autocomplete: "off", :class => "form-control" %>
            </div>
        </div>
    </div>

      <div class="actions" >
  <%= f.button "Sign up", class: "btn btn-primary waves-effect waves-button waves-float", style: "font-size: em; margin-top: 1em;" %>
  </div>


                                     
  <% end %>

  </div>